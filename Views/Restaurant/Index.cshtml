@{
    ViewData["Title"] = "Home Page";
}
@model RESTauranter.Models.Review
<h1>Write a New Review : </h1>

<form asp-controller="Restaurant" asp-action="NewReview" method="post">
    <table class="table" id="borderless">
        <tr>
            <td><label asp-for="UserName"></label></td>
            <td><input asp-for="UserName"/></td>
        </tr>
        <tr>
            <td></td>
            <td class="error"><span asp-validation-for="UserName"></span></td>
        </tr>
        <tr>
            <td>Restaurant Name</td>
            <td><input type="text" name="Name"/></td>
        </tr>
        <tr>
            <td></td>
            <td class="error"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Content"></label></td>
            <td><input asp-for="Content"/></td>
        </tr>
        <tr>
            <td></td>
            <td class="error"><span asp-validation-for="Content"></span><p class="error">@TempData["email_exists"]</p></td>
        </tr>
        <tr>
            <td><label asp-for="Date"></label></td>
            <td><input asp-for="Date"/></td>
        </tr>
        <tr>
            <td></td>
            <td class="error"><span asp-validation-for="Date"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Star"></label></td>
            <td><input asp-for="Star"/></td>
        </tr>
        <tr>
            <td></td>
            <td class="error"><span asp-validation-for="Star"></span></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Add Review"></td>
        </tr>
    </table>

</form>

